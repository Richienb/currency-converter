    "license": "MIT",
    "author": {
        "name": "Antoni Kepinski",
        "email": "a@kepinski.me",
        "url": "https://kepinski.me"
    },
    "main": "app/background.js",
    "scripts": {
        "build": "next build",
        "dev": "next dev",
        "start": "next start",
        "test": "xo"
    },
    "engines": {
        "node": "12.x"
    },
    "dependencies": {
        "@chakra-ui/core": "^0.6.1",
        "@emotion/core": "^10.0.28",
        "@emotion/styled": "^10.0.27",
        "cashify": "^2.4.1",
        "core-js": "^3.6.4",
        "isomorphic-unfetch": "^3.0.0",
        "next": "^9.3.1",
        "react": "^16.13.1",
        "react-dom": "^16.13.1",
        "react-hook-form": "^5.1.1",
        "react-select": "^3.0.8",
        "swr": "^0.1.18"
    },
    "devDependencies": {
        "@babel/core": "^7.9.0",
        "@types/react": "^16.9.25",
        "@typescript-eslint/eslint-plugin": "^2.24.0",
        "@typescript-eslint/parser": "^2.24.0",
        "babel-plugin-emotion": "^10.0.29",
        "eslint-config-xo-react": "^0.23.0",
        "eslint-config-xo-typescript": "^0.26.0",
        "eslint-plugin-react": "^7.19.0",
        "eslint-plugin-react-hooks": "^2.5.1",
        "next-fonts": "^1.0.3",
        "next-offline": "^5.0.0",
        "typescript": "^3.8.3",
        "xo": "^0.28.0"
    },
    "xo": {
        "envs": [
            "node",
            "browser"
        ],
        "extends": [
            "xo-typescript",
            "xo-react"
        ],
        "rules": {
            "import/no-unassigned-import": "off",
            "import/extensions": "off",
            "unicorn/string-content": "off"
        },
        "settings": {
            "react": {
                "version": "16.13"
            }
        },
        "extensions": [
            "tsx",
            "ts"
        ],
        "ignores": [
            "babel.config.js",
            "next.config.js"
        ]
    }
}
