{
 "name": "currency-converter",
 "version": "1.0.0",
 "description": "Simple currency converter build with React & Next.js",
 "main": "index.js",
 "scripts": {
  "dev": "next",
  "build": "next build",
  "start": "next start",
  "test": "xo && stylelint 'pages/**/*.tsx'"
 },
 "author": "Antoni Kepinski <a@kepinski.me> (https://kepinski.me)",
 "license": "MIT",
 "dependencies": {
  "cashify": "^1.2.1",
  "core-js": "^3.2.1",
  "idb-keyval": "^3.2.0",
  "modern-normalize": "^0.5.0",
  "next": "^9.0.7",
  "react": "^16.10.0",
  "react-dom": "^16.10.0",
  "react-use-form-state": "^0.11.0",
  "styled-components": "^5.0.0-beta.8"
 },
 "devDependencies": {
  "@babel/core": "^7.6.2",
  "@types/node": "^12.7.8",
  "@types/react": "^16.9.3",
  "@types/react-dom": "^16.9.1",
  "@types/styled-components": "^4.1.19",
  "@typescript-eslint/eslint-plugin": "^2.3.1",
  "@typescript-eslint/parser": "^2.3.1",
  "@zeit/next-css": "^1.0.1",
  "babel-plugin-styled-components": "^1.10.6",
  "eslint-config-xo-react": "^0.20.0",
  "eslint-config-xo-typescript": "^0.18.0",
  "eslint-plugin-react": "^7.14.3",
  "eslint-plugin-react-hooks": "^2.1.0",
  "next-offline": "^4.0.5",
  "stylelint": "^11.0.0",
  "stylelint-config-styled-components": "^0.1.1",
  "stylelint-config-xo": "^0.15.0",
  "stylelint-processor-styled-components": "^1.8.0",
  "typescript": "^3.6.3",
  "xo": "^0.25.3"
 },
 "xo": {
  "nodeVersion": ">=10",
  "envs": [
   "node",
   "browser"
  ],
  "extends": [
   "xo-react",
   "xo-typescript"
  ],
  "extensions": [
   "ts",
   "tsx"
  ],
  "settings": {
   "react": {
    "version": "16.8"
   }
  },
  "rules": {
   "import/no-unassigned-import": "off",
   "react/jsx-child-element-spacing": "off",
   "@typescript-eslint/no-explicit-any": "off",
   "@typescript-eslint/promise-function-async": "off",
   "@typescript-eslint/await-thenable": "off"
  },
  "ignores": [
   "next.config.js",
   "babel.config.js"
  ]
 }
}
